<h1>New ad:</h1>
<%= form_for (@ad) do |f| %>
  <% if @ad.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ad.errors.count, "error") %> prohibited this ad from being saved:</h2>

      <ul>
      <% @ad.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <label for="ad_name">Name</label>
    <%= f.text_field :name, class: "form-control" %><br>
  <label for="ad_description">Description</label>
    <%= f.text_area :description,  class: "form-control" %><br>
  <label for="ad_price">Price</label>
    <%= f.text_field :price, class: "form-control" %><br>
  <label for="ad_seller_id">Seller_id</label>
    <%= f.text_field :seller_id, class: "form-control" %><br>
  <label for="ad_email">Email</label>
    <%= f.text_field :email, class: "form-control" %><br>
  <label for="ad_img_url">Img_url</label>
    <%= f.text_field :img_url, class: "form-control" %><br>
  <%= f.submit 'Submit', class: "form-control" %>
<% end %>
